patterns:
    $Address = {[$addressCity] * ($addressStreet * $addressHome)}
    $addressHome = $regexp<(д\.)?\d+(-|/)?[А-Яа-я0-9]*>
    $addressStreet = ($regexp<\b((У|у)л(\.[А-Яа-я]+|иц.)?|(П|п)ер(-к|еул..)?|(П|п)р(-кт|-т|оспект.?|оезд.?)?|(Б|б)(-р|ульвар.?)|(Ш|ш)оссе|(М|м)(икрорайон|-н|кр|рн|крн|ийон|икр-он))> $regexp<[А-Яа-я]+>|$regexp<\b((У|у)л|(П|п)ер|(П|п)р|(Ш|ш))\.[А-Яа-я]+>)
    $addressCity = ($regexp<\b(Г|г)(ор|ород.?)?> $regexp<^[А-Яа-я]+>|$regexp<^(Г|г)\.[А-Яа-я]+>)
